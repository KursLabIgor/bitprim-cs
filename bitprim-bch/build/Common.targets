<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="GetBitprimNodeCint">
    <Exec Command="conan remote list" ConsoleToMSBuild="true">
      <Output TaskParameter="ConsoleOutput" PropertyName="ConanRemoteList" />
    </Exec>
    <Exec Command="conan remote update bitprim https://api.bintray.com/conan/bitprim/bitprim" Condition="$(ConanRemoteList.Contains('bitprim'))" />
    <Exec Command="conan remote add bitprim https://api.bintray.com/conan/bitprim/bitprim" Condition="!$(ConanRemoteList.Contains('bitprim'))" />
    
    <ReadLinesFromFile  
            File="..\bitprim\conan\conan_channel">  
            <Output  
                TaskParameter="Lines"  
              PropertyName="CONAN_CHANNEL"  />  
    </ReadLinesFromFile>  

     <ReadLinesFromFile  
            File="..\bitprim\conan\conan_version">  
            <Output  
                TaskParameter="Lines"  
              PropertyName="CONAN_VERSION"/>  
    </ReadLinesFromFile>      
  

    <ReadLinesFromFile  
            File="conan_channel">  
            <Output  
                TaskParameter="Lines"  
              PropertyName="CONAN_CHANNEL" Condition="'$(CONAN_CHANNEL)' == ''" />  
    </ReadLinesFromFile>

    <ReadLinesFromFile  
            File="conan_version">  
            <Output  
                TaskParameter="Lines"  
              PropertyName="CONAN_VERSION" Condition="'$(CONAN_VERSION)' == ''"/>  
    </ReadLinesFromFile>      
  
  
    <Message Text="Conan Channel: $(CONAN_CHANNEL)"/>
    <Message Text="Conan Version: $(CONAN_VERSION)"/>

    <!-- <WriteLinesToFile
      File="conanfile.txt" Lines="[requires];bitprim-node-cint/$(CONAN_VERSION)@bitprim/$(CONAN_CHANNEL);[generators];cmake;[options];bitprim-node-cint:shared=True;[imports];bin, *.dll    -> .;lib, *.so    -> .;lib, *.dylib    -> ."
      Overwrite="true"/>
    -->

    <WriteLinesToFile
      File="conanfile.txt" Lines="[requires];bitprim-node-cint/0.9.1@bitprim/testing;[generators];cmake;[options];bitprim-node-cint:shared=True;[imports];bin, *.dll    -> .;lib, *.so    -> .;lib, *.dylib    -> ."
      Overwrite="true"/>

    <Message Text="Operating System: $(OS)"/>
    
    <Exec Command="conan install . --install-folder=."/>
    <Message Text="OS = $(OS)" />
    <Copy SourceFiles="bitprim-node-cint.dll" DestinationFiles="$(OutDir)libbitprim-node-cint.dll" Condition=" '$(OS)' == 'Windows_NT' "/>
    <Copy SourceFiles="libbitprim-node-cint.so" DestinationFiles="$(OutDir)libbitprim-node-cint.so" Condition="Exists('libbitprim-node-cint.so')"/>
    <Copy SourceFiles="libbitprim-node-cint.dylib" DestinationFiles="$(OutDir)libbitprim-node-cint.dylib" Condition="Exists('libbitprim-node-cint.dylib')"/>
  </Target>
</Project>